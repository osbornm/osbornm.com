<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title - Matthew M. Osborn</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <meta name="viewport" content="width=device-width">
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">@Html.ActionLink("Matthew M. Osborn", "Index", "Home")</p>
                </div>
                <div class="float-right">
                    <nav id="main-nav">
                        <ul id="menu">
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li><a href="http://blog.osbornm.com">Blog</a></li>
                            <li>@Html.ActionLink("Talks", "Talks", "Home")</li>
                            <li>@Html.ActionLink("Résumé", "Resume", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li><a href="http://github.com/osbornm/playr" title="Your Company's DJ">Playr</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year Matthew M. Osborn</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="http://twitter.com/osbornm" class="twitter" title="osbornm">Twitter</a></li>
                        <li><a href="http://www.w3.org/html/logo/" class="html5" title="HTML5 Powered with CSS3 / Styling, and Semantics">HTML5</a></li>
                        <li><a href="https://github.com/osbornm/osbornm.com" class="github" title="Download this site's source">Github</a></li>
                    </ul>
                </div>
            </div>
        </footer>
        <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-12268721-6']);
            _gaq.push(['_trackPageview']);

            (function () {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();
        </script>
    </body>
</html>
